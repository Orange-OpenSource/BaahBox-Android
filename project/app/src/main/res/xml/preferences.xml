<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/action_settings">

    <!-- ******************************** -->
    <!-- Section dedicated to the sensors -->
    <!-- ******************************** -->

    <PreferenceCategory
            android:title="@string/preferences_sensors_section"
            android:key="pref_key_settings_sensors">

        <SeekBarPreference
                android:title="@string/preferences_sensors_hardness_title"
                android:key="pref_key_settings_sensors_hardness"
                android:summary="@string/preferences_sensors_hardness_summary"
                android:max="2"
                android:defaultValue="1">

        </SeekBarPreference>

    </PreferenceCategory>

    <!-- ************* -->
    <!-- Section about -->
    <!-- ************* -->

    <PreferenceCategory
            android:title="@string/preferences_about_section"
            android:key="pref_key_about">

        <Preference
                android:key="pref_key_about_app"
                android:title="@string/preferences_about_version_title"
                android:summary="@string/preferences_about_version_summary" />

        <Preference
                android:key="pref_key_about_licenses"
                android:title="@string/preferences_about_licenses_title"
                android:summary="@string/preferences_about_licenses_summary" />

    </PreferenceCategory>

</PreferenceScreen>