<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/action_settings">

    <!-- ******************************** -->
    <!-- Section dedicated to the sensors -->
    <!-- ******************************** -->

    <PreferenceCategory
            android:title="@string/preferences_general_section"
            android:key="pref_key_settings_general">

        <SwitchPreference
                android:title="@string/preferences_demo_mode_enabled_title"
                android:summary="@string/preferences_demo_mode_enabled_summary"
                android:key="preferences_demo_mode_enabled"
                android:defaultValue="false">

        </SwitchPreference>

        <SeekBarPreference
                android:title="@string/preferences_sensors_difficulty_title"
                android:key="pref_key_settings_sensors_difficulty"
                android:summary="@string/preferences_sensors_difficulty_summary"
                android:max="2"
                android:defaultValue="1">

        </SeekBarPreference>

    </PreferenceCategory>

    <!-- **************************** -->
    <!-- Section dedicated sheep game -->
    <!-- ****************************- -->

    <PreferenceCategory
            android:title="@string/preferences_game_sheep_title"
            android:key="pref_key_settings_sheep_game">

        <SeekBarPreference
                android:title="@string/preferences_game_sheep_fences_number_title"
                android:summary="@string/preferences_game_sheep_fences_number_summary"
                android:key="pref_key_settings_game_sheep_fences_number">

        </SeekBarPreference>

    </PreferenceCategory>

    <!-- ************* -->
    <!-- Section about -->
    <!-- ************* -->

    <PreferenceCategory
            android:title="@string/preferences_about_section"
            android:key="pref_key_about">

        <Preference
                android:key="pref_key_about_app"
                android:title="@string/preferences_about_version_title"
                android:summary="@string/preferences_about_version_summary" />

        <Preference
                android:key="pref_key_about_licenses"
                android:title="@string/preferences_about_licenses_title"
                android:summary="@string/preferences_about_licenses_summary" />

    </PreferenceCategory>

</PreferenceScreen>